@model IEnumerable<AmandaViagens.Models.Ingresso>

@{
    ViewData["Title"] = "Ingressos";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.css" />
}
@section Scripts {
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.js"></script>
    <script src="~/js/datatables.js"></script>
}

<h1 class="display-4">Lista de Ingressos</h1>
<p class="py-3">
    <a class="btn btn-dark" asp-action="Create">
        <i class="bi bi-plus-circle-fill"></i> Adicionar
    </a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Preco)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" data-bs-toggle="tooltip" data-bs-title="Editar Ingresso"><i
                            class="bi bi-pencil-fill"></i></a> |
                    <a asp-action="Details" asp-route-id="@item.Id" data-bs-toggle="tooltip"
                        data-bs-title="Exibir Detalhes"><i class="bi bi-search"></i></a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" data-bs-toggle="tooltip"
                        data-bs-title="Excluir Ingresso"><i class="bi bi-trash-fill"></i></a>
                </td>
        </tr>
}
    </tbody>
</table>
