@model AmandaViagens.Models.Ingresso

@{
    ViewData["Title"] = "Ingressos";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="display-4">Ingressos</h1>
<h4 class="display-6">Excluir</h4>
<hr />
<h3 class="text-danger">Confirma a exclus√£o desse Ingresso?</h3>
<div class="row">
    <div class="col-md-4 col-sm-12 col-xxl-3">
        <div class="form-group">
            <label asp-for="Image" class="form-label"></label>
            <img src='@Url.Content("~/" + Model.Image)' class="img-fluid w-100">
        </div>
    </div>
    <div class="col-md-8 col-sm-12 col-xxl-9">
        <div class="col-12 mb-2">
            <label asp-for="Nome" class="form-label"></label>
            <input asp-for="Nome" class="form-control" disabled/>
        </div>
        <div class="col-12 mb-2">
            <label asp-for="Preco" class="form-label"></label>
            <input asp-for="Preco" class="form-control" disabled/>
        </div>
        <div class="col-12 mb-2">
            <label asp-for="Descricao" class="form-label"></label>
            <textarea asp-for="Descricao" class="form-control" rows="3" disabled></textarea>
        </div>
       
    </div>
    <form asp-action="Delete" class="col-12 mt-4">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-dark me-3"><i class="bi bi-trash-fill"></i> Excluir</button>
        <a asp-action="Index" class="btn btn-dark" style="background-color: #023959;"><i class="bi bi-arrow-left-circle-fill"></i> Voltar a Listagem</a>
    </form>
</div>
